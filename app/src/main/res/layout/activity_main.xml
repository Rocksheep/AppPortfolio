<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:id="@+id/title_view"
        android:text="@string/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"/>

    <Button
        android:id="@+id/spotify_streamer_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Spotify Streamer"
        android:layout_below="@id/title_view"
        android:layout_centerHorizontal="true"
        style="@style/menu_button"
        android:onClick="openSpotifyStreamer"/>
    <Button
        android:id="@+id/scores_app_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Scores App"
        android:layout_below="@id/spotify_streamer_button"
        android:layout_centerHorizontal="true"
        style="@style/menu_button"
        android:onClick="openScoresApp"/>
    <Button
        android:id="@+id/library_app_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Library App"
        android:layout_below="@id/scores_app_button"
        android:layout_centerHorizontal="true"
        style="@style/menu_button"
        android:onClick="openLibraryApp"/>
    <Button
        android:id="@+id/build_it_bigger_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Build It Bigger"
        android:layout_below="@id/library_app_button"
        android:layout_centerHorizontal="true"
        style="@style/menu_button"
        android:onClick="openBuildItBigger"/>
    <Button
        android:id="@+id/xyz_reader_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="XYZ Reader"
        android:layout_below="@id/build_it_bigger_button"
        android:layout_centerHorizontal="true"
        style="@style/menu_button"
        android:onClick="openXYZReader"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Capstone: My Own App"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/xyz_reader_button"
        style="@style/menu_button_important"
        android:onClick="openCapstone"/>

</RelativeLayout>
